<html>
  <body>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>New Test </h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <div class="row">          	
  			    <form id="create_form" class="form-horizontal">
  			      <div class="form-group">
              <label class="control-label col-md-1 col-sm-1 col-xs-1">Test Name</label>			        
  			        <div class="col-md-4 col-sm-4 col-xs-12">
  			          <input id="test_text" type="text" class="form-control" placeholder="test name you want to add...">
  			        </div>
                <span id='creation'></span>                                               
  			      </div>
  			      <div class="form-group">
  			        <label class="control-label text-left col-md-1 col-sm-1 col-xs-12">Test Type </label>
  			        <div class="col-md-4 col-sm-4 col-xs-12">
  			          <input id="type_text" type="text" class="form-control"  placeholder="the type of your test (SAF/TestApp) ... ">
  			        </div>
  			      </div>     			  
  				   <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
  		          <button type="submit" class="btn btn-success">Submit</button>
  		       </div>
  			   	</form>
          </div>
  	     </div>	
	     </div>
    </div>

    <!-- jquery -->
    <script src="./vendors/jquery/dist/jquery.min.js"> </script>
    <script>

      var create_indicator = document.getElementById('creation');         
      $('#create_form').on('submit', function (e) {
        var test_name= $('#test_text').val()                
        var type= $('#type_text').val()                 
         $.ajax({
              url: 'create_test',
              type: 'GET',
              data: { test_name: test_name, type: type} ,  
              success: function(data){                   
                  var result=$.parseJSON(data);       
                  console.log(result.message)
                  if (result.status == 200) {
                    create_indicator.textContent="Test " + test_name + " Created successfully"
                     create_indicator.style.color = 'green';                 
                  }
                  else {
                    create_indicator.textContent=result.message;
                    create_indicator.style.color = 'red';
                  }                  
              }         
          }); 
        return false;        
      });     
    </script>
  </body>
</html>