<html>
<style type="text/css">
	h5, th { text-align: center; }
table { margin:0px; padding:0px; text-align:left;font-family: Segoe UI; box-shadow: 10px 10px 5px #888; border: thin ridge grey; }
th { background: #2A3F54; color: #fff; max-width: 400px; padding: 5px 10px; }
td { font-size: 11px; padding: 5px 20px; color: #000; }
tr { background: #b8d1f3; }
tr:nth-child(even) { background: #dae5f4; }
tr:nth-child(odd) { background: #b8d1f3; }
</style>

<div class="cent">
<% if ! @analysis_nightly.nil? && @analysis_nightly_total.nil? %> 
	<body>
          <% @analysis_nightly.each do |env, env_analysis| %>
           <% if ! env.include?("Auto") %>
           <h2><%= env %>
	   <table  width="70%">
	   <tr>
	      <th>Test Name</th>
	      <th>Environment</th>
	      <th>TimeStamp</th>
	      <th>Success Rate</th>
	      <th>Execution Status</th>
	   </tr>
	   <% env_analysis.each do |analysis| %>     
	   <tr>   	     

	      <td><%= analysis[:test_name]%></td>
	      <td><%= analysis[:environment]%></td>
	      <td><%= analysis[:timestamp]%></td>
	      <td><%= analysis[:success_rate]%></td>
	      <td><%= analysis[:execution_status]%></td>
	    </tr>    
	    <% end %>
	  </table>
          <% end %>
         <% end %>
         
          <h2>Platform</h2>
           <table  width="70%">
           <tr>
              <th>Test Name</th>
              <th>Environment</th>
              <th>TimeStamp</th>
              <th>Success Rate</th>
              <th>Execution Status</th>
           </tr>
           <% @analysis_nightly.select { |k,_| k.include?("Auto")}.each do | env,env_analysis| %>
            <% env_analysis.each do |analysis| %>
            <tr>

              <td><%= analysis[:test_name]%></td>
              <td><%= analysis[:environment]%></td>
              <td><%= analysis[:timestamp]%></td>
              <td><%= analysis[:success_rate]%></td>
              <td><%= analysis[:execution_status]%></td>
            </tr>
            <% end %>
             <% end %>
          </table>
	</body>
<% end %>
</html>

